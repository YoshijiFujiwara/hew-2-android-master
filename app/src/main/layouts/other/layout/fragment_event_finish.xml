<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BudgetEstimateFragment"
    android:gravity="start"
    android:clipToPadding="false">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="400dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/going_event"/>

    <!--中央に載せるテキスト画像-->
    <TextView
        android:id="@+id/session_main_image_text"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        />

    <RelativeLayout
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/going_event"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:elevation="5dp"
        android:background="@color/colorWhite"
        android:id="@+id/event_card"
        >

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:id="@+id/session_site"
            android:minHeight="30dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:id="@+id/session_time"
            android:layout_below="@+id/session_site"
            android:minHeight="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:id="@+id/session_people"
            android:layout_gravity="bottom"
            android:layout_below="@+id/session_time"
            android:minHeight="30dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_card"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="118dp"
        android:layout_marginRight="118dp">

        <Button
            android:id="@+id/session_finish_btn"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/session_finish_btn"
            android:padding="5dp"
            android:text="セッションを終了"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>